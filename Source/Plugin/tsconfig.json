{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018"
        ],
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
    },
    "include": [
        "./"
    ],
    "exclude": [
        "node_modules/",
        "dist/",
        "**/*.spec.ts"
    ]
}